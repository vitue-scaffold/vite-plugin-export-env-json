{
  "compilerOptions": {
    "declaration": true,
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "src/"
  },
  "include": ["./src/"],
  "exclude": ["**/dist", "**/node_modules", "**/example"]
}